<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jul.m4104c_projet2.SignupActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="10dp">

        <TextView
            android:id="@+id/signupSignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Créer un compte" />

        <EditText
            android:id="@+id/signupEditFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ton prénom"
            android:inputType="textPersonName"
            android:textColor="@color/colorButtonText"/>

        <EditText
            android:id="@+id/signupEditName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ton nom"
            android:inputType="textPersonName"
            android:textColor="@color/colorButtonText"/>

        <TextView
            android:id="@+id/signupTVAvatar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choisis un avatar" />

        <RadioGroup
            android:id="@+id/signupRGAvatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/signupIBLoutre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@mipmap/ic_loutre"
                android:onClick="clickLoutre" />

            <ImageButton
                android:id="@+id/signupIBOrnithorynque"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@mipmap/ic_ornithorynque"
                android:onClick="clickOrni"/>

            <ImageButton
                android:id="@+id/signupIBVache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@mipmap/ic_vache"
                android:onClick="clickVache"/>
        </RadioGroup>

        <Button
            android:id="@+id/signupBtnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Créer un compte"
            android:onClick="clickSubmit"
            android:layout_gravity="bottom"/>

        <Button
            android:id="@+id/signupBtnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Revenir à l'accueil"
            android:onClick="clickBack"/>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
