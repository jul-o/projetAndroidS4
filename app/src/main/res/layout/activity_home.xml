<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jul.m4104c_projet2.HomeActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/homeTVFirstName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Prénom"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/homeTVName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Nom"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/homeTVScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Score : " />

        <Button
            android:id="@+id/homeBtnMaths"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            android:onClick="clickMaths"
            android:text="Mathématiques"
            android:textColor="#4524ff" />

        <Button
            android:id="@+id/homeBtnFr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickFr"
            android:text="Culture générale"
            android:textColor="#4524ff"/>

        <Button
            android:id="@+id/HomeBtnDisconnect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickDisconnect"
            android:text="Se déconnecter"
            android:textColor="#4524ff"/>

        <ImageView
            android:id="@+id/homeIVAvatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_loutre" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
