<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jul.m4104c_projet2.SuccessActivityMath">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/successMathTVCongrats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bravo !"
            android:background="#ff5900"/>

        <TextView
            android:id="@+id/successMathTVExpl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tu as réussi l'exercice"
            android:background="#ff5900"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"></LinearLayout>

        <Button
            android:id="@+id/successMathBtnBackMaths"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choisir un autre exercice de maths"
            android:onClick="clickChoiceMaths"/>

        <Button
            android:id="@+id/successMathBtnBackHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Revenir à l'accueil"
            android:onClick="clickHome"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
